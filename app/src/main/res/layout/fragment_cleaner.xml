<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/toolbar"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_gravity="center_horizontal"
            android:elevation="4dp"
            android:background="@color/color_primary"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="clean"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textview_size_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cleaned!"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="@android:color/primary_text_dark"
                android:textSize="36sp"/>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_folders"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:elevation="1dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:id="@+id/textview_section_folders"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/subheader_folders"
                        android:textSize="@dimen/font_size_title"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#000"
                        android:alpha="0.54"/>

                    <ListView
                        android:id="@+id/listview_folders_new"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="bottom"
                        android:divider="@null"
                        android:overScrollMode="never"
                        android:scrollbars="none"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardview_autodelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:elevation="1dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="@string/subheader_autodelete"
                            android:textSize="@dimen/font_size_title"
                            android:gravity="center_vertical"
                            android:paddingStart="16dp"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#000"
                            android:alpha="0.54"
                            android:layout_weight="1"/>

                        <Switch
                            android:id="@+id/switch_autodelete"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="0.1"
                            android:paddingRight="16dp"/>
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/checkbox_notification_show"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Show notification"
                        android:checked="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"/>

                    <CheckBox
                        android:id="@+id/checkbox_notification_icon"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Notification icon"
                        android:checked="true"
                        android:layout_marginLeft="8dp"/>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:alpha="0.12"
                        android:background="@android:color/black"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/textview_history"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="@string/subheader_history"
                        android:textSize="@dimen/font_size_title"
                        android:gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="@android:color/black"
                        android:alpha="0.54"
                        android:paddingEnd="16dp"
                        android:textIsSelectable="false"/>

                    <TextView
                        android:id="@+id/textview_history_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your history will appear here"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:alpha="0.54"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"/>

                    <ListView
                        android:id="@+id/listview_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:visibility="visible"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
